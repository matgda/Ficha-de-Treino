<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_component"
    app:startDestination="@id/login2">

    <fragment
        android:id="@+id/login2"
        android:name="com.example.listafitness.view.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login2_to_cadastro_usuario"
            app:destination="@id/cadastro_usuario" />
        <action
            android:id="@+id/action_login2_to_cronometroFragment"
            app:destination="@id/cronometroFragment" />
    </fragment>
    <fragment
        android:id="@+id/cadastro_usuario"
        android:name="com.example.listafitness.view.CadastroUsuario"
        android:label="fragment_cadastro_usuario"
        tools:layout="@layout/fragment_cadastro_usuario" />
    <fragment
        android:id="@+id/cronometroFragment"
        android:name="com.example.listafitness.view.CronometroFragment"
        android:label="fragment_cronometro"
        tools:layout="@layout/fragment_cronometro" />
</navigation>